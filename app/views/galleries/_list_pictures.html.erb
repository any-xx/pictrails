<% if @gallery.pictures.empty? -%>
  <p>
    There are no picture in this gallery.
  </p>
<% else %>
  <ul id="picture_list">
    <% @gallery.pictures.each do |image| %>
      <li>
        <% if image.status %>
          <%= link_to (image_tag image.public_filename(:thumb), :alt => image.title), image.public_filename , {:rel => "splash.image|groupe1"} %>
          <%= image.title %><br />
          <% image.description %>
        <% else %>
          <%= link_to (image_tag image.public_filename(:thumb), :alt => image.title), image.public_filename , {:rel => "splash.image|groupe1"} %>
          <%= image.title %> (disabled)<br />
          <% image.description %>
          <%= image_tag '/images/admin/error.png', :class => "no_display" %>
        <% end -%>
      </li>
    <% end %>
  </ul>
<% end -%>
