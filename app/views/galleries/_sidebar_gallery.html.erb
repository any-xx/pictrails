<dt>Galleries</dt>
<dd>
  <ul>
    <% Gallery.without_parent.each do |gallery| %>
      <li>
        <%= link_gallery_with_number(gallery) %> 
        <% unless gallery.children.empty? %>
          <ul>
            <% gallery.children.each do |gallery_child| %>
              <li><%= link_gallery_with_number(gallery_child) %></li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
</dd>
