<% @page_title = "#{@picture.title} from gallery #{@picture.gallery.name}" %>

<% tasks %> 

<h2>Manage Pictures</h2>


<% if flash[:notice] %>
  <p class="notice"><%=h flash[:notice] %></p>
<% end -%>


<p>
  <%= image_tag @picture.public_filename(:view) %>
</p>

<div class="set admin">
  <ul>
    <li>
      <label class="float">Titre :</label>
      <%=h @picture.title %>
    </li>

    <% unless @picture.description.empty? %>
      <li>
      <label class="float">Description :</label><br />
        <label class="block"><%= @picture.description %></label>
      </li>
    <% end %>
    
    <li>
      <label class="float">Tags :</label>
      <%=h @picture.tag_list %>
    </li>
  </ul>
</div>


<p><%= link_to "Back to editing gallery #{@picture.gallery.name}", edit_admin_gallery_url(@picture.gallery) %> </p>
